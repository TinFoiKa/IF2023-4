@import "/pages/EB/Buy/Buy.wxss";
.container {
  /* background: #7acfa6; */
  align-items: stretch;
  padding: 0;
  height: 100%;
  overflow: hidden;
}
.lg-title {
  text-align: center;
  width: 100%;
  height: 100vh;
  font-weight: 200rpx;
  align-items: center;
}
.login-form{
position: absolute;
width: 100%;
 top:22%; 
}
.img-group{
  width: 100%;
  display: flex;
  top:30%;
  justify-content: center;
  padding-bottom: 50rpx;
}
.input-group {
  display: flex;
  align-items: center;
  padding: 11rpx 10rpx;
  margin: 40rpx 20%;
  /* background: #fff; */
  border-radius: 16px;
  transition: all .25s ease-in-out;
  background: rgba(255,255,255,0.5);
  height: 100rpx;
  border: 1rpx solid #5bb1f7;
}
.input-group.active {
  border: 2px solid #7acfa6;
}
.input-img {
  padding: 0 25rpx;
  height: 42rpx;
  width: 42rpx;
}
.input-label {
  width: 80%;
}
.input-placeholder,
.input-group picker.placeholder {
  color: rgb(70, 67, 67);
}
.confirm-btn {
  font-size: 10pt;
  line-height: 90rpx;
  height: 90rpx;
  background: #66cccc;
  color: #fff;
  text-align: center;
  border-radius: 16px;
  margin: 50rpx 20%;
  width: 60%;
}
.confirm-btn:active {
  opacity: .8;
}
