.popup-box{
    position: absolute;
    z-index: 99;
    top: 0;
    background-color: rgba(0, 0, 0, 0.5);
    width: 100%;
    height: 100%;
}

.popup{
    width: 600rpx;
    height: 1000rpx;
    z-index: 999;
    position: fixed;
    background-color: white;
    box-shadow: 0px 0px 5px #d3d3d3;
    left: 75rpx;
    top: 170rpx;
}

.closeButton{
    position: absolute;
    height: 20px;
    width: 20px;
    top: 0px;
    right: 0px;
    z-index: 1;
}

.button-group{
	display: flex;
	justify-content: space-around;
	margin-bottom: 40rpx;
}