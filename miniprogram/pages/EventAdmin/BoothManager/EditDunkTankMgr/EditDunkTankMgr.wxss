.uni-content-right{
    display: flex;
    flex-direction: column;
    margin-right: 30rpx;
    margin-top: 20rpx;
	position: relative;
	z-index: 11;
  }
  .uni-body {
    display: flex;
    justify-content: space-between;
  }
  .uni-body {
    border-bottom: 1rpx solid #ddd;
  }
  .uni-media-list-logo {
      margin-right: 30rpx;
