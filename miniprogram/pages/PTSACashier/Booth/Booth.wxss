@import "/pages/BoothLists/BoothLists.wxss";
@import "/pages/BoothLists/Foods/Foods.wxss";

.uni-content-right{
    display: flex;
    flex-direction: column;
    margin-right: 30rpx;
    margin-top: 20rpx;
  
  }
  .uni-body {
    display: flex;
    justify-content: space-between;
  }
  .uni-body {
    border-bottom: 1rpx solid #ddd;
  }
  .uni-media-list-logo {
      margin-right: 30rpx;
  }

.popup-box{
    position: absolute;
    z-index: 99;
    top: 0;
    background-color: rgba(0, 0, 0, 0.5);
    width: 100%;
    height: 100%;
}

.popup{
    width: 600rpx;
    height: 1000rpx;
    z-index: 999;
    position: fixed;
    background-color: white;
    box-shadow: 0px 0px 5px #d3d3d3;
    left: 75rpx;
    top: 170rpx;
}

.closeButton{
    position: absolute;
    height: 20px;
    width: 20px;
    top: 0px;
    right: 0px;
    z-index: 1;
}

.button-group{
	display: flex;
	justify-content: space-around;
	margin-bottom: 50rpx;
}






.container {
  /* background: #7acfa6; */
  align-items: stretch;
  padding: 0;
  height: 100%;
  overflow: hidden;
}
.img-group{
  width: 100%;
  display: flex;
  top:30%;
  justify-content: center;
  padding-bottom: 50rpx;
}
.avar-img{
  /* border-radius: 50%; */
  width: 284rpx;
  height: 228rpx;
}



.navbar {
	flex: none;
	display: flex;
	background: #fff;
	border-bottom: 2rpx solid #cdcdcd;
  }
   
  .navbar .item {
	color: #1a1a1a;
	position: relative;
	flex: auto;
	text-align: center;
	line-height: 80rpx;
  }
   
  .navbar .item.active {
	color: green;
	font-weight: bold;
  }
   
  .navbar .item.active:after {
	content: "";
	display: block;
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	height: 4rpx;
  }

  .uni-forms-item__input{
	width: 100%;
	position: relative;
	overflow: hidden;
	flex: 1;
	line-height: 1;
	font-size: 14px;
	height: 80rpx;
	display: flex;
	  box-sizing: border-box;
	  flex-direction: row;
	  align-items: center;
	  border: 1px solid #dcdfe6;
	  border-radius: 4px;
	  padding-left: 20rpx;
  }